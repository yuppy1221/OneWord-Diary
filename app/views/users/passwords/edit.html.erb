<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, :class => 'form-horizontal' }) do |f| %>
  <fieldset>
    <div class="form-group">
      <div class="col-lg-4 col-lg-offset-1">
        <h2>パスワード変更</h2>
        <%#= devise_error_messages! %>
      </div>
    </div>
    <%= f.hidden_field :reset_password_token %>
    <div class="form-group">
      <div class="col-lg-4 col-lg-offset-1">
        <%= f.label :password, "新しいパスワード" %><br />
        <%= f.password_field :password, :class=>"form-control", autofocus: true, autocomplete: "off" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-4 col-lg-offset-1">
        <%= f.label :password_confirmation, "新しいパスワード（確認）" %><br />
        <%= f.password_field :password_confirmation, :class=>"form-control", autofocus: true, autocomplete: "off" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-4 col-lg-offset-1">
        <div class="form-group pull-right">
          <%= f.submit "変更", :class=>"btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-4 col-lg-offset-1">
        <div class="form-group pull-right">
          <%= link_to "ログインへ", new_session_path(resource_name), :class=>"btn btn-default btn-lg" %>
          <%= link_to "ユーザ登録へ", new_registration_path(resource_name), :class=>"btn btn-default btn-lg" %>
        </div>
      </div>
    </div>
  </fieldset>
<% end %>