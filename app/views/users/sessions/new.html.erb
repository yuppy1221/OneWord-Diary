<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { :method => 'post', :class => 'form-horizontal' }) do |f| %>
  <fieldset>
    <div class="form-group">
      <div class="col-lg-4 col-lg-offset-1">
        <h2>ログイン</h2>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-4 col-lg-offset-1">
        <%= f.label :email, 'メールアドレス' %><br />
        <%= f.email_field :email, :class=>"form-control", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-4 col-lg-offset-1">
        <%= f.label :password, 'パスワード' %><br />
        <%= f.password_field :password, :class=>"form-control", autocomplete: "off" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-4 col-lg-offset-1">
        <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, 'パスワードを記憶する' %>
        <% end -%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-4 col-lg-offset-1">
        <div class="form-group pull-right">
          <%= f.submit "ログイン", :class=>"btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-4 col-lg-offset-1">
        <div class="form-group pull-right">
          <%= link_to "ユーザ登録へ", new_registration_path(resource_name), :class=>"btn btn-default btn-lg" %>
          <%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name), :class=>"btn btn-default btn-lg" %>
        </div>
      </div>
    </div>
  </fieldset>
<% end %>