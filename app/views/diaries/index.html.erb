<div class="jumbotron">
  <h1>ひとこと日記</h1>
</div>

<%= form_for (@diary), :html => {:class => 'form-inline'} do |f| %>
  <fieldset>
    <div class="col-lg-6 col-lg-offset-1">
      <div class="form-group">
        <%= f.text_field :word, :class=>"form-control", :size=>"60", :placeholder=>"あたらしい日記をここに書く" %>
      </div>
      <div class="form-group">
        <%= f.submit "書く", :class=>"btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>

<div class="col-lg-10 col-lg-offset-1">
  <table  class="table table-striped table-hover">
    <% w = "" %>
    <% @diaries.each do |diary| %>
      <% if w != diary.write_datetime.strftime("%Y-%m-%d") then %>
        </table>
        <% w = diary.write_datetime.strftime("%Y-%m-%d") %>
        <h4><%= w %></h4>
        <table  class="table table-striped table-hover">
      <% end %>
      <tr>
        <td width="50px"><%= link_to '編集', edit_diary_path(diary), :class=>"btn btn-default btn-xs" %></td>
        <td width="100px"><%= diary.write_datetime.strftime("%H:%M:%S") %></td>
        <td><%= diary.word %></td>
      </tr>
    <% end %>
  </table>
</div>
